{
  "name": "Trending Button for Github",
  "version": "0.0.1",
  "manifest_version": 3,
  "description": "This extension adds a trending button to Github",
  "homepage_url": "https://github.com/s4chin/gh-trending",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "content_scripts": [
    {
      "matches": [
        "https://www.github.com/*",
        "https://github.com/*",
        "http://www.github.com/*",
        "http://github.com/*"
      ],
      "css": [
        "src/inject/inject.css"
      ],
      "js": [
        "src/inject/inject.js"
      ]
    }
  ]
}
